{
    "target": "es5",
    "module": "commonjs",
    "compilerOptions": {
        "removeComments": true,
        "outDir": "build/",
        "rootDir": "src/",
        "allowJs": false,
        "declaration": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
}